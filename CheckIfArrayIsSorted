public class JavaBasics
{
  public static boolean checkIncreasing(int arr[] , int startIndex)
  {
    if(startIndex == arr.length-1)  // if we reach last index then it is sorted
    {
      return true;
    }
    if(arr[startIndex] > arr[startIndex + 1])
    {
      return false;
    }
    boolean smallAns = checkIncreasing(arr, startIndex+1);
    return smallAns;

  }
  public static void main(String args [])
  {
    int arr[] = {2,1,3,4,5,6,8,12};
    System.out.println(  checkIncreasing(arr,0));
  }
}
